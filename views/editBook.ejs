<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Book</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Edit Book</h1>
  <a href="/logout">Logout</a>
  <% if (errors && errors.length > 0) { %>
    <div style="color: red;">
      <% errors.forEach(error => { %>
        <p><%= error %></p>
      <% }); %>
    </div>
  <% } %>
  <form action="/books/<%= book._id %>" method="post">
    <label>Title:</label><input type="text" name="title" value="<%= book.title %>" required><br>
    <label>Author:</label><input type="text" name="author" value="<%= book.author %>" required><br>
    <label>Year:</label><input type="number" name="year" value="<%= book.year %>"><br>
    <label>Genre:</label><input type="text" name="genre" value="<%= book.genre %>"><br>
    <button type="submit">Update Book</button>
  </form>
  <a href="/books">Back to Books</a>
</body>
</html>
